{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
  ]
}
